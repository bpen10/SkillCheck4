<!DOCTYPE html>
<html>
<head>
  <title>Edit Character</title>
  <style>
    form {
      width: 50%;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #F9F9F9;
      font-size: 12px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    input, select, button {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    input[type="checkbox"], input[type="radio"] {
      width: auto;
      margin-right: 5px;
    }
    button {
      background-color: #4CAF50;
      color: white;
      font-size: 12px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45A049;
    }
  </style>
</head>
<body>
  <h1 style="text-align: center;">Edit Character</h1>
  <form action="/charEdit/<%= character.id %>" method="POST">
    <!-- Character First Name -->
    <label for="first_name">First Name</label>
    <input type="text" id="first_name" name="first_name" value="<%= character.first_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Character Last Name -->
    <label for="last_name">Last Name</label>
    <input type="text" id="last_name" name="base_total" value="<%= character.last_name %>" required oninput="this.value = this.value.toUpperCase()">
    <!-- Jedi (Checkbox) -->
    <label for="jedi">
      <input type="checkbox" id="jedi" name="jedi" value="true" <%= character.jedi ? 'checked' : '' %>>
      Jedi
    </label>
    <!-- Weapon (Radio Buttons) -->
    <label>Weapon</label>
    <label>
      <input type="radio" name="weapon" value="L" <%= character.weapon === 'L' ? 'checked' : '' %>> LIGHTSABER
    </label>
    <label>
      <input type="radio" name="weapon" value="B" <%= character.weapon === 'B' ? 'checked' : '' %>> BLASTER
    </label>
    <label>
      <input type="radio" name="weapon" value="N" <%= character.weapon === 'N' ? 'checked' : '' %>> NONE
    </label>
    <!-- Planet -->
    <label for="planet_name">Planet</label>
    <select id="planet_name" name="planet_name" required>
      <% planets.forEach(planet => { %>
        <option value="<%= planet.id %>" <%= character.planet_name === planet.id ? 'selected' : '' %>>
          <%= planet.planet_name %>
        </option>
      <% }) %>
    </select>
    <!-- Submit Button -->
    <button type="submit">Save Changes</button>
  </form>
</body>
</html>